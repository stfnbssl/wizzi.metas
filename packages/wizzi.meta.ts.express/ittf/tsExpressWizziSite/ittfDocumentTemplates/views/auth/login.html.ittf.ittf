$group

	${'$'}
        var opt = {
		    section: 'Account',
            title: 'Login',
        }

    html/layouts/site${'('} &opt )
        . flex-row justify-content-center m-xxl
            . flex-column border-s
                . m-t-xxl
                    h3
                        + Login to Wizzi
                . m-t-xxl font-xl font-w-s
                    + Choose your identity proviver
                . card m-xxl
                    . card-item m-xxl
                        a 
                            href /auth/login/google
                            . flex-row justify-content-center border-s radius-m p-x color-black font-w-s
                                . flex-column justify-content-center
                                    img
                                        src /public/images/sign-in/btn_google_dark_normal_ios.svg
                                . flex-column justify-content-center p-l-x
                                    span
                                        + Sign in with google
                    . card-item m-xxl 
                        a
                            href /auth/login/github 
                            . flex-row justify-content-center border-s radius-m p-x color-black font-w-s
                                . flex-column justify-content-center 
                                    img 
                                        width 46px
                                        height 46px
                                        src /public/images/sign-in/GitHub-Mark-32px.png
                                . flex-column justify-content-center p-l-x 
                                    span
                                        + Sign in with github