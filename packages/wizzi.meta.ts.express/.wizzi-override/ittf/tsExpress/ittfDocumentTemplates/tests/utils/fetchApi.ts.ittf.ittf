    async-function putPostRequest
        param url
            :string 
        param data
            :object 
        param method
            :string 
        :return
            :ref Promise
                :param 
                    :ref Response
        try 
            const response
                await 
                    _ fetch
                        @ url
                        { 
                            @ method method
                            { headers
                                @ 'Content-Type' 'application/json'
                            @ body JSON.stringify(data)
            if !response.ok
                throw 
                    new Error
                        `lit 
                            + HTTP error! status:&nbsp;
                            @ response.status
                            + 
            return response
        catch error
            error 'There was a problem with the fetch operation:', error
            throw error

