$group
    import Avatar from './avatar'
    import DateFormatter from './date-formatter'
    import CoverImage from './cover-image'
    import Link from 'next/link'
    :import-type Author from '../interfaces/author'
    :type Props
        :{ 
            :p title
                :string 
            :p coverImage
                :string 
            :p date
                :string 
            :p excerpt
                :string 
            :p author
                :ref Author
            :p slug
                :string 
    const PostPreview
        => 
            { 
                @ title
                @ coverImage
                @ date
                @ excerpt
                @ author
                @ slug
                :ref Props
            return 
                div 
                    div 
                        @ className "mb-5"
                        < CoverImage 
                            @ slug {slug}
                            @ title {title}
                            @ src {coverImage}
                    h3 
                        @ className "text-3xl mb-3 leading-snug"
                        < Link 
                            @ as
                                `lit 
                                    + /posts/
                                    @ slug
                                    + 
                            @ href "/posts/[slug]"
                            @ className "hover:underline"
                            + {title}
                    div 
                        @ className "text-lg mb-4"
                        < DateFormatter 
                            @ dateString {date}
                    p 
                        @ className "text-lg leading-relaxed mb-4"
                        + {excerpt}
                    < Avatar 
                        @ name {author.name}
                        @ picture {author.picture}
    export-default PostPreview
