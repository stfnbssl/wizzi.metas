$group
	${'$'}params l:integer, &opt
	
	polyline
		stroke ${'$'}{opt.color}
		fill ${'$'}{opt.color}
		stroke-width 2
		points ${'$'}{l} ${'$'}{opt.ybottom} 
			\b ${'$'}{l} ${'$'}{opt.ybottom - 20}
			\b ${'$'}{l+100} ${'$'}{opt.y1a+40} 
			\b ${'$'}{l+80} ${'$'}{opt.y1a+20} 
			\b ${'$'}{l+80} ${'$'}{opt.y1a} 
			\b ${'$'}{l+130} ${'$'}{opt.y1a} 
			\b ${'$'}{l+100} ${'$'}{opt.ybottom - 20}
			\b ${'$'}{l+120} ${'$'}{opt.ybottom - 20}
			\b ${'$'}{l+120} ${'$'}{opt.ybottom}